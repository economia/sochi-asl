@import colors
@import prefixes
@import extraIg
.ig
    @import basics

.ig
    svg
        overflow hidden
        .axis
            font-size 0.72em
            .tick
                text
                    fill #444
                line
                    stroke #888
                    stroke-width 1px
                    shape-rendering crispEdges
            path.domain
                stroke #888
                shape-rendering crispEdges
.ig
    ul.selector
        position absolute
        top 0px
        left 68px
        list-style-type none
        padding 0px
        margin 0px
        li
            width 84px
            height 109px
            border-radius 4px
            border 1px solid #888
            margin-left 10px
            float left
            overflow hidden
            position relative
            background #f8f8f8

            &:first-child
                margin-left 0px
            &:hover
                cursor pointer
                background #f2f2f2
            span
                position absolute
                top 62px
                left 0px
                width 100%
                text-align center
                font-size 0.8em
                color #444
            canvas
                width 100%
                height 60px
                background #fff
                border-bottom 1px dotted #ccc
