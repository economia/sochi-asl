@import colors
@import prefixes
@import extraIg
.ig
    @import basics

.ig
    svg
        overflow hidden
        .axis
            font-size 0.72em
            .tick
                text
                    fill #444
                line
                    stroke #bbb
                    stroke-width 1px
                    shape-rendering crispEdges
            path.domain
                stroke #bbb
                shape-rendering crispEdges
        .graph.secondary-active
            .athlete
                fill-opacity 0.5
                &.highlight
                    fill-opacity 1
        g.crosshair
            line
                stroke #ddd
                shape-rendering crispEdges
            circle
                fill HNBlue
                stroke-width 1px



.ig
    ul.selector
        position absolute
        top 0px
        left 68px
        height 0px // don't overlay the graph
        list-style-type none
        padding 0px
        margin 0px
        li
            HNDorange = desaturate(HNOrange, 87%)
            width 84px
            height 104px
            border-radius 4px
            border 1px solid lighten(HNDorange,70%)
            margin-left 10px
            margin-bottom 10px
            float left
            overflow hidden
            position relative
            background lighten(HNDorange,95%)

            &:first-child
            &:nth-child(10)
                margin-left 0px
            &:hover
                cursor pointer
                background lighten(HNDorange,92%)
            &.active
                background lighten(HNDorange,85%)
                border-color lighten(HNDorange,53%)
            span
                position absolute
                top 66px
                left 0px
                width 100%
                padding 0px 6px
                text-align center
                text-transform uppercase
                font-size 0.7em
                line-height 1.4em
                color #666
            canvas
                width 100%
                height 60px
                background #fff
                border-bottom 1px dotted #ccc
    ul.sex-selector
        top 250px
        li
            height 89px
